! Xft settings --------
Xft.dpi: 96
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: false
Xft.hintstyle: hintfull
Xft.lcdfilter: lcddefault

XTerm*background: #2e3436
XTerm*foreground: #d3d7cf
XTerm*color0: #2e3436
XTerm*color1: #cc0000
XTerm*color2: #4e9a06
XTerm*color3: #c4a000
XTerm*color4: #3465a4
XTerm*color5: #75507b
XTerm*color6: #06989a
XTerm*color7: #d3d7cf
XTerm*color8: #555753
XTerm*color9: #ef2929
XTerm*color10: #8ae234
XTerm*color11: #fce94f
XTerm*color12: #729fcf
XTerm*color13: #ad7fa8
XTerm*color14: #34e2e2
XTerm*color15: #eeeeec
!XTerm*maximized: true
!XTerm*fullscreen: false

!XTerm*faceName: Bitstream Vera Sans Mono:style=roman
XTerm*faceName: Hack:style=Regular
!XTerm*faceNameDoublesize: WenQuanYi Bitmap Song:style=roman
xterm*faceNameDoublesize: WenQuanYi Micro Hei:pixelsize=14 
XTerm*faceSize: 10
!XTerm*faceName: Monaco:style=roman:pixelsize=11
!XTerm*inputMethod: ibus
XTerm*metaSendsEscape: true

Emacs.FontBackend: xft
!Emacs.font: Monospace-8
!Emacs.font: Bitstream Vera Sans Mono-8
!Emacs.font: Terminus-9
!Emacs.menuBar: off
!Emacs.toolBar: off
!Emacs.verticalScrollBars: off
